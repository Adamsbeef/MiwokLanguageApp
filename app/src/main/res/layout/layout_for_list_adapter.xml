<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageDisplayer"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:background="@android:color/white">

        <LinearLayout
            android:id="@+id/textViewContainer"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/miwokTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="Lutti"
                    tools:textColor="@android:color/holo_red_light" />

                <TextView
                    android:id="@+id/englishTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/white"
                    tools:text="One"
                    tools:textColor="@android:color/holo_red_light" />
            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:src="@drawable/baseline_play_arrow_black_36"
                tools:background="@android:color/holo_red_light" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>